<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="ead.mobile.scan_me.New_stuff_activity">

    <TextView
        android:id="@+id/txt_new_stuff"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:text="New Stuff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:padding="7dp"
        android:hint="ID"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/border_plain_text"
        android:id="@+id/etxt_id_barang"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/etxt_nama_barang"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="7dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Name"
        android:background="@drawable/border_plain_text"
        />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_type"
        android:hint="Type"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:padding="7dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/border_plain_text"
        />

    <EditText
        android:id="@+id/et_merk"
        android:background="@drawable/border_plain_text"
        android:layout_toRightOf="@+id/et_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="7dp"
        android:hint="Merk"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/et_date"
            android:padding="7dp"
            android:textSize="11dp"
            android:hint="Day / Month / Year"
            android:layout_toLeftOf="@+id/btn_datePicker"
            android:background="@drawable/border_plain_text"
            android:layout_marginRight="20dp"
            android:layout_width="120dp"
            android:layout_height="40dp" />

        <Button
            android:background="@drawable/rounded_button"
            android:text="date"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btn_datePicker"
            android:onClick="date_picker"
            />

        <Spinner
            android:id="@+id/spinner_status"
            android:layout_toLeftOf="@+id/et_date"
            android:layout_marginLeft="30dp"
            android:padding="7dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorRed"
            />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_specs"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:hint="Specification"
        android:padding="7dp"
        android:background="@drawable/border_plain_text"
        />


    <Button
        android:id="@+id/btn_generate_qr"
        android:textSize="20dp"
        android:text="Generate QR"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_button2"
        android:textColor="@color/colorRed"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="generateQR"
        />

</LinearLayout>
