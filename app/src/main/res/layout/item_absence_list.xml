<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:padding="9dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon_person"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_toRightOf="@+id/icon_person"
            android:id="@+id/nama_asisten"
            android:textColor="@color/colorBlack"
            android:text="Nama Asisten"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/kode_asisten"
            android:text="RVD"
            android:layout_toRightOf="@+id/icon_person"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/nama_asisten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/icon_person"
            android:layout_below="@id/kode_asisten"
            android:id="@+id/id_asisten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/jam_absence"
            android:textColor="@color/colorBlack"
            android:text="00:00"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/kode_asisten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>